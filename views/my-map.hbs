{{!-- insert map --}}

<div id="map" style="height: 100vh; width: 100%;"></div>

{{#each restaurantList }}
<input type="hidden" class="restaurantMarker" value={{this.name}} />
<input type="hidden" class="restaurantMarkerLat" value={{this.latitude}} />
<input type="hidden" class="restaurantMarkerLong" value={{this.longitude}} />
<input type="hidden" class="restaurantMarkerId" value={{this._id}} />

{{/each}}


